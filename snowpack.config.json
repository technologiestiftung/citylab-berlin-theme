{
  "mount": {
    "public": "/"
  },
  "exclude": [
    ".gitignore",
    ".nvmrc",
    "package.json",
    "package-lock.json",
    "renovate.json"
  ],
  "plugins": [
    [
      "@snowpack/plugin-run-script",
      {
        "cmd": "postcss src/style.css -o public/style.compiled.css",
        "watch": "postcss src/style.css -o public/style.compiled.css -w"
      }
    ]
  ]
}
